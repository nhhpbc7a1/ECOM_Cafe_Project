<a name="" id="" class="btn btn-outline-success mt-3 mb-3" href="/casher/order_list/" role="button">
    <i class="bi bi-skip-backward-fill"></i>
    Back
</a>


<div class="order-list mb-3">
    <div class="header-order">
        <h6>#Mã đơn: {{order.order_id}}</h6>
        <h6 class="time-order">
            <i class="bi bi-clock-history"></i>&nbsp;&nbsp;{{formatDate order.order_date "DD/MM/YYYY HH:mm" }}
        </h6>
        {{!-- <div class="d-flex justify-content-end">
            <input class="btn-checkbox" type="checkbox" id="active-order" class="form-check-input">
        </div> --}}
    </div>
    <div>
        {{#each order_items}} <!-- Lặp qua các orderItems trong từng đơn hàng -->
        <hr style="opacity: 0.1;">
        <div class="order-item">
            <div class="d-flex">
                <div class="order_item_quantity">{{quantity}}x</div>
                <div class="order_item_image">
                    <img src="/images/{{image_href}}" class="img-thumbnail" alt="..."
                        style="width: 60px; height: 60px; margin: 0 24px 0 12px">
                </div>
                <div class="d-flex flex-column">
                    <h5>{{name}}</h5>
                    {{#each toppings}}
                    <div class="order_item_topping_name">
                        {{topping_name}}
                    </div>
                    {{/each}}
                    <div class="order_item_note">{{note}}</div>
                </div>
            </div>
            <div class="text-price">
                {{format_price total_price}}
            </div>
        </div>
        {{/each}}
    </div>
    <hr>
    <div class="text-muted row" style="padding: 5px 12px 12px 12px;">
        <div class="col-6 d-flex" style="justify-content: start;">
            Status: <h5 class="ms-3" style="color: red">{{order.status}}</h5>
        </div>
        <div class="row col-6" style="text-align:right;">
            <div class="col-6">Total price</div>
            <div class="col-6">
                <h5>{{format_price this.total_price}}</h5>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    {{#each order_status_history}}
    <div class="col-3">
        <div class="card">
            <div class="card-header">
                <h5>{{status}}</h5>
            </div>
            <div class="card-body">
                <p class="card-text">
                <h5>Reason: </h5> {{reason}}</p>
                <hr>
                <p class="card-text">
                <h5>Datetime:</h5>{{formatDate change_date "DD/MM/YYYY HH:mm"}}</p>
            </div>
        </div>
    </div>

    {{/each}}
</div>