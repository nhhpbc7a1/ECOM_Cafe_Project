{{#section 'js'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
{{/section}}


<form id="frmAddservice_package_payment" action="" method="post">
    <div class="container-fluid" style="padding: 40px;">
        <div class="card">
            <div class="card-header">
                <h4>Sửa thanh toán gói cước</h4>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="service_package_payment_id">Mã thanh toán</label>
                    <input type="text" name="service_package_payment_id" id="service_package_payment_id" class="form-control" placeholder=""
                        value="{{this.service_package_payment.service_package_payment_id}}" readonly>
                </div>
                <div class="form-group">
                    <label for="branch_id">Mã chi nhánh</label>
                    <input type="text" name="branch_id" id="branch_id" class="form-control" placeholder=""
                        value="{{this.service_package_payment.branch_id}}">
                </div>
                <div class="form-group">
                    <label for="service_package_id">Mã gói cước</label>
                    <input type="text" name="service_package_id" id="service_package_id" class="form-control" placeholder=""
                        value="{{this.service_package_payment.service_package_id}}">
                </div>
                <div class="form-group">
                    <label for="date_bought">Ngày mua</label>
                    <input type="text" name="date_bought" id="date_bought" class="form-control" placeholder=""
                        value="{{this.service_package_payment.date_bought}}">
                </div>

            </div>
            <div class="card-footer text-muted">
                <a name="" id="" class="btn btn-outline-success" href="/admin/service_package_payment" role="button">
                    <i class="bi bi-skip-backward-fill"></i>
                </a>
                <button type="submit" class="btn btn-danger" formaction="/admin/service_package_payment/del">
                    <i class="bi bi-trash"></i>
                    delete
                </button>
                <button type="submit" class="btn btn-primary" formaction="/admin/service_package_payment/patch">
                    <i class="bi bi-check2"></i>
                    save
                </button>

            </div>
        </div>
    </div>
</form>