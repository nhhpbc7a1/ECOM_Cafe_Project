<div class="search-container">
    <h2>Kết quả tìm kiếm cho: "{{query}}"</h2>

    {{#if searchResults.length}}
        <div class="result-list">
            {{#each searchResults}}
                <div class="card">
                    <h3>{{this.name}}</h3>
                    <p>Danh mục: {{this.category_name}}</p>
                    <p>Giá: {{this.price}} VND</p>
                </div>
            {{/each}}
        </div>
    {{else}}
        <p>Không tìm thấy kết quả nào.</p>
    {{/if}}
</div>