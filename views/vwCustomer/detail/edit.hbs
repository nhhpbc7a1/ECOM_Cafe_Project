<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Detail</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/customer/css/detail.css">
</head>

<body>
    <form action="/customer/detail/edit" method="POST">
        <input type="hidden" name="product_id" value="{{this.product.product_id}}">
        <input type="hidden" name="quantity" id="hiddenQuantity" value="1">
        <input type="hidden" name="topping" id="selectedToppings" value="">
        <input type="hidden" name="note" id="note" value="">
        <input type="hidden" name="cost_price" id="cost_price" value="{{this.product.cost_price}}">
        <div class="container" style="min-height: 100vh; padding-bottom: 50px;">
            <!-- Card -->
            <div class="card">
                <!-- Header -->
                <div class="food-header">
                    <div class="image" style="background-image: url('/images/{{product.image_href}}');">
                        <div class="header-buttons">
                            <a class="btn-circle" id="close-btn" href="/customer/menu">X</a>
                            <button class="btn-circle" id="share-btn">üîó</button>
                        </div>
                    </div>
                </div>
                <!-- Content -->
                <div class="food-content">
                    <div class="price_name_block food-info">
                        <div class="price_name_block_name">
                            <span>{{product.name}}</span>
                        </div>
                        <div class="text-end price_name_block_price">
                            <span class="price-new">{{product.cost_price}} VNƒê</span>
                        </div>
                    </div>
                    <span id="txtDescription">{{product.description}}</span>
                </div>
            </div>

            <div class="card">
                <div class="food-content">
                    <!-- Add-ons -->
                    <div class="addons">
                        <div class="d-flex align-items-center mb-3">
                            <div class="title" style="margin-right: 10px;">Th√™m toppings</div>
                            <div class="text-muted small">Kh√¥ng b·∫Øt bu·ªôc</div>
                        </div>
                        {{#each product.topping}}
                        <div class="form-check">
                            <input class="form-check-input topping-checkbox" type="checkbox" id="option{{@index}}" 
                                data-name="{{this.name}}" data-price="{{this.price}}" 
                                {{#if this.selected}}checked{{/if}} >
                            <label class="form-check-label" for="option{{@index}}" style="width: 100%;">
                                <div class="d-flex justify-content-between">
                                    <div>{{this.name}}</div>
                                    <div>+{{this.price}} VNƒê</div>
                                </div>
                            </label>
                        </div>
                        <hr>
                        {{/each}}
                    </div>
                </div>
            </div>

            <div class="card" style="margin-bottom: 30px;">
                <div class="food-content">
                    <div class="addons">
                        <div class="d-flex align-items-center mb-3">
                            <div class="title" style="margin-right: 10px;">Th√™m l∆∞u √Ω cho qu√°n</div>
                            <div class="text-muted small">Kh√¥ng b·∫Øt bu·ªôc</div>
                        </div>
                        <div class="form-floating">
                            <textarea class="form-control" placeholder="Vi·ªác th·ª±c hi·ªán y√™u c·∫ßu c√≤n t√πy thu·ªôc v√†o kh·∫£ nƒÉng c·ªßa qu√°n"
                                id="floatingTextarea2" style="height: 100px">{{product.note}}</textarea>
                            <label for="floatingTextarea2">Y√™u c·∫ßu</label>
                        </div>
                    </div>
                </div>
                <div class="quantity_block">
                    <button type="button" id="btnMinus">
                        <i class="bi bi-dash"></i>
                    </button>
                     <input type="number" name="quantity_display" value="1" id="txtCount" readonly>
                    <button type="button" id="btnPlus">
                        <i class="bi bi-plus"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="footer">
            <button class="btn btn-success btn-lg" type="submit" id="add-to-basket-btn">Save change - {{product.cost_price}}</button>
        </div>
    </form>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // H√†m t√≠nh to√°n t·ªïng gi√°
        function calculateTotalPrice() {
            let basePrice = parseFloat('{{product.cost_price}}'); // Gi√° c∆° b·∫£n
            let totalPrice = basePrice;

            // C·ªông gi√° topping
            $('.topping-checkbox:checked').each(function () {
                totalPrice += parseFloat($(this).data('price'));
            });

            // S·ªë l∆∞·ª£ng
            let quantity = parseInt($('#txtCount').val());

            // T·ªïng gi√°
            let finalPrice = totalPrice * quantity;

            // C·∫≠p nh·∫≠t hi·ªÉn th·ªã
            $('#add-to-basket-btn').text(`Save change - ${finalPrice.toFixed(0)} VNƒê`);
        }

        function updateHiddenQuantity() {
            $('#hiddenQuantity').val($('#txtCount').val());
        }

        // H√†m c·∫≠p nh·∫≠t c√°c topping ƒë∆∞·ª£c ch·ªçn
        function updateSelectedToppings() {
            let selected = [];
            $('.topping-checkbox:checked').each(function () {
                // L·∫•y th√¥ng tin topping t·ª´ data-attributes c·ªßa checkbox
                let toppingInfo = {
                    name: $(this).data('name'), // T√™n topping
                    price: $(this).data('price') // Gi√° topping
                };
                selected.push(toppingInfo); // Th√™m topping v√†o m·∫£ng
            });
            // Chuy·ªÉn m·∫£ng th√†nh chu·ªói JSON v√† c·∫≠p nh·∫≠t v√†o tr∆∞·ªùng ·∫©n
            $('#selectedToppings').val(JSON.stringify(selected));
        }

        // C·∫≠p nh·∫≠t gi√° tr·ªã note khi g·ª≠i form
        function updateNote() {
            $('#note').val($('#floatingTextarea2').val());
        }

        $(document).ready(function () {
            calculateTotalPrice(); // T√≠nh gi√° khi t·∫£i trang

            // S·ª± ki·ªán khi thay ƒë·ªïi topping
            $('.topping-checkbox').change(function () {
                updateSelectedToppings();
                calculateTotalPrice();
            });

            // Gi·∫£m s·ªë l∆∞·ª£ng
            $('#btnMinus').click(function () {
                let count = parseInt($('#txtCount').val());
                if (count > 1) {
                    $('#txtCount').val(--count);
                    updateHiddenQuantity();  // C·∫≠p nh·∫≠t quantity
                    calculateTotalPrice();
                }
            });

            // TƒÉng s·ªë l∆∞·ª£ng
            $('#btnPlus').click(function () {
                let count = parseInt($('#txtCount').val());
                $('#txtCount').val(++count);
                updateHiddenQuantity();  // C·∫≠p nh·∫≠t quantity
                calculateTotalPrice();
            });

            // C·∫≠p nh·∫≠t gi√° tr·ªã note khi g·ª≠i form
            $('#add-to-basket-btn').click(function () {
                updateNote();  // C·∫≠p nh·∫≠t note tr∆∞·ªõc khi g·ª≠i form
            });
        });
    </script>
</body>

</html>
