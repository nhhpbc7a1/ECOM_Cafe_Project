<form action="" method="post">
    <div class="container-fluid" style="padding: 40px;">
        <div class="card">
            <div class="card-header">
                <h4>Cập nhật món</h4>
            </div>
            <div class="card-body">
                <input class="form-control mb-3" type="text" placeholder="Readonly input here..." readonly
                    value={{this.menu_item.menu_item_id}} name="menu_item_id">
                <div class="d-flex align-items-center">
                    <div class="form-group">
                        <label for="exampleFormControlFile1">Hình ảnh sản phẩm</label>
                        <input type="file" class="form-control-file" id="exampleFormControlFile1">
                    </div>
                    <img src="/images/{{this.menu_item.image_href}}" class="img-thumbnail" alt="..." style="width: 100px; height: 100px;">
                </div>
                <div class="form-group">
                    <label for="txtName">Tên</label>
                    <input type="text" name="name" id="txtName" class="form-control" placeholder=""
                        aria-describedby="helpId" value="{{this.menu_item.name}}">
                    <small id="helpId" class="text-muted">Help text</small>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Danh mục</label>
                    <select class="form-control" id="exampleFormControlSelect1" name="category_id"
                        value="{{this.menu_item.category_id}}">
                        {{#each this.categories}}
                        <option value={{category_id}} {{#ifEquals this.category_id ../menu_item.category_id}}selected{{/ifEquals}}>
                            {{category_name}}
                        </option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="txtCostPrice">Giá gốc</label>
                    <input type="text" name="cost_price" id="txtCostPrice" class="form-control" placeholder=""
                        aria-describedby="helpId" value="{{this.menu_item.cost_price}}">
                    <small id="helpId" class="text-muted">Help text</small>
                </div>
                <div class="form-group">
                    <label for="txtSalePrice">Giá bán</label>
                    <input type="text" name="sale_price" id="txtSalePrice" class="form-control" placeholder=""
                        aria-describedby="helpId" value="{{this.menu_item.sale_price}}">
                    <small id="helpId" class="text-muted">Help text</small>
                </div>

                <hr>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Mô tả</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                        name="description">{{this.menu_item.description}}</textarea>
                </div>
            </div>
            <div class="card-footer text-muted">
                <a name="" id="" class="btn btn-outline-success" href="/manager/menu_item" role="button">
                    <i class="bi bi-skip-backward-fill"></i>
                </a>
                <button type="submit" class="btn btn-danger" formaction="/manager/menu_item/del">
                    <i class="bi bi-trash"></i>
                    delete
                </button>
                <button type="submit" class="btn btn-primary" formaction="/manager/menu_item/patch">
                    <i class="bi bi-check2"></i>
                    save
                </button>

            </div>
        </div>
    </div>
</form>