<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <div class="card">
                        <div class="card-header">
                            Danh sách món
                        </div>
                        <div class="card-body ">
                            <div class="container menu_item_container">
                                {{#each entity.order_items}}
                                <div class="mt-3 row d-flex justify-content-between menu_item_container">
                                    <div class="d-flex">
                                        <div class="mr-3 card d-flex justify-content-center align-items-center"
                                            style="height: 1.6rem; padding: 0.4rem">
                                            {{quantity}}x
                                        </div>

                                        <div class="">
                                            <img src="/images/{{image_href}}" class="img-thumbnail" alt="..."
                                                style="width: 100px; height: 100px;">
                                        </div>
                                        <div class="ml-3">
                                            <h5 class="card-title">{{name}}</h5>
                                            {{#each ../entity/order_item_toppings}}
                                            {{#ifEquals order_item_id ../order_item_id}}
                                            <p class="card-text">{{topping_name}}</p>
                                            {{/ifEquals}}
                                            {{/each}}
                                        </div>
                                    </div>
                                    <div class="">
                                        <p class="card-text">{{sale_price}}</p>
                                    </div>
                                </div>
                                <hr>

                                {{/each}}

                            </div>
                        </div>
                        <div class="card-footer text-muted">
                            <div class="row" style="text-align:right;">
                                <div class="col-9">Subtotal</div>
                                <div class="col-3">0đ</div>
                            </div>
                            <div class="row" style="text-align:right;">
                                <div class="col-9">Applicable fees</div>
                                <div class="col-3">{{entity.order.total_amount}}đ</div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-3">
                        {{#each entity.order_status_history}}
                        <div class="col-3">
                            <div class="card">
                                <div class="card-header">
                                    {{status}}
                                </div>
                                <div class="card-body">
                                    <p class="card-text">{{change_date}}</p>
                                </div>
                            </div>
                        </div>

                        {{/each}}
                    </div>
                </div>
                <div class="card-footer text-muted">
                    <a name="" id="" class="btn btn-outline-success" href="/manager/order/" role="button">
                        <i class="bi bi-skip-backward-fill"></i>
                    </a>

                </div>
            </div>
        </div>
    </div>
</div>