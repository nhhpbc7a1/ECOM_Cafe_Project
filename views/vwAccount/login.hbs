<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
      integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/manager/css/login.css" />
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col login-form-section">
          <div class="login-form">
            <div class="login-intro">
              <h1 class="title">Delicacy ðŸ‘‹</h1>
              <p class="subtitle">
                Today is a new day. It's your day. You shape it. Sign in to
                start managing your projects.
              </p>
            </div>
            <form action="/account/login" method="POST" onsubmit="return validateForm()">
              <!-- Hiá»ƒn thá»‹ lá»—i náº¿u cÃ³ -->
              {{#if error}}
                <div class="alert alert-danger">
                  {{error}}
                </div>
              {{/if}}
              <div class="form-group">
                <label for="txtEmail" class="label-input">Email</label>
                <div class="error-container">
                  <span class="require" id="emailError">required</span>
                </div>
                <input type="email" class="user-input form-control" id="txtEmail" name="email" placeholder="Example@email.com" required
                  oninput="validateInput('txtEmail', 'emailError')" />
              </div>
              
            <div class="form-group">
              <label for="txtPassword" class="label-input">Password</label>
              <div class="error-container">
                <span class="require" id="passwordError">required</span>
              </div>
              <input type="password" class="user-input form-control" id="txtPassword" name="password" placeholder="At least 8 characters" required
                oninput="validateInput('txtPassword', 'passwordError')" />
            </div>
              <div class="link-forgot-password">
                <a href="/forgot-password" class="forgot-password"
                  >Forgot Password?</a
                >
              </div>
              <br />
              <input type="submit" value="Sign in" class="submit-button" />
            </form>
            <div class="or">Or</div>

            <div class="social-login">
              <button class="social-button">
                <img
                  class="google-icon"
                  alt="logo google-icon"
                  src="/manager/images/login/Google.png"
                />
                Sign in with Google
              </button>
              <button class="social-button">
                <img
                  class="facebook-icon"
                  alt="logo facebook-icon"
                  src="/manager/images/login/Facebook.png"
                />Sign in with Facebook
              </button>
            </div>
            <div class="signup">
              <p>Donâ€™t you have an account? <a href="/account/signup">Sign up</a></p>
            </div>
          </div>
        </div>
        <div class="col image-section">
          <img
            src="/manager/images/login/Login Art.png"
            id="image-section"
            alt="logo login"
          />
        </div>
      </div>
    </div>

    <script>
      function validateInput(inputId, errorId) {
        const input = document.getElementById(inputId);
        const error = document.getElementById(errorId);
        
        if (input.value.trim() === "") {
          error.style.display = "inline";
        } else {
          error.style.display = "none";
        }
      }

      function validateForm() {
        validateInput('txtEmail', 'emailError');
        validateInput('txtPassword', 'passwordError');
        const emailErrorVisible = document.getElementById('emailError').style.display !== "none";
        const passwordErrorVisible = document.getElementById('passwordError').style.display !== "none";
        return !(emailErrorVisible || passwordErrorVisible);
      }
    </script>
  </body>
</html>
